<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/butterfly">


    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="28sp"
        android:paddingBottom="350dp"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:text="@string/welcome_page_title"
    />

    <Button
        android:id="@+id/button"
        android:color="@color/blue_button"
        android:layout_height="60dip"
        android:layout_width="300dip"
        android:textColor="@color/white"
        android:text="@string/sign_in_button"
        android:onClick="onSignInClick"
        android:clickable="true"
        android:background="@color/black_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="220dip"
        android:layout_height="55dip"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:id="@+id/relativeLayout">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20px"
            android:layout_weight="0.33">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="0.5"
                android:layout_marginRight="10px"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="sans-serif-light"
                android:text="@string/have_no_account"
            />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/textLink"
        android:layout_width="193dp"
        android:layout_height="85dp"
        android:layout_marginRight="10px"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="sans-serif-light"
        android:onClick="onRegisterClick"
        android:clickable="true"
        android:text="@string/register_link"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true" />


</RelativeLayout>